<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @pet.race %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>



<p>
  <strong>Visits:</strong>
</p>
<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Peso</th>
      <th>Altura</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet.pet_histories.each do |pet|  %>
      <tr>
        <td><%= pet.created_at%></td>
        <td><%= pet.weight %></td>
        <td><%= pet.heigth %></td>
        <td><%= pet.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Peso Máximo</th>
      <th>Altura Máxima</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.pet_histories.average(:weight) %></td>
      <td><%= @pet.pet_histories.average(:heigth) %></td>
      <td><%= @pet.pet_histories.maximum(:weight) %></td>
      <td><%= @pet.pet_histories.maximum(:heigth) %></td>
    </tr>
  </tbody>
</table>





<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>
